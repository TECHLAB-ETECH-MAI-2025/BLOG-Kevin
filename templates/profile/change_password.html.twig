{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        {% include 'profile/_sidebar.html.twig' %}
        <div class="col-md-9">
            <h2>Changer mon mot de passe</h2>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.currentPassword) }}
                    {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.currentPassword) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <button type="submit" class="btn btn-primary">Changer mon mot de passe</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
